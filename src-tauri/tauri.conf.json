{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Veterinary Clinic Manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "scope": [
          "$TEMP/**",
          "$RESOURCE/**"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.vetclinic.app",
      "targets": "all",
      "icon": [],
      "resources": [
        "resources/**"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Veterinary Clinic Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
