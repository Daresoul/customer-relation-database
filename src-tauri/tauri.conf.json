{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Veterinary Clinic Manager",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "scope": [
          "$TEMP/**",
          "$RESOURCE/**"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "save": true
      },
      "process": {
        "all": false,
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.vetclinic.app",
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/**"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/Daresoul/customer-relation-database/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQyOENDM0Q2RjI3RTU5MTEKUldRUldYN3kxc09NUXBlbS9CNkZvZmROTHJBVGVBeEJpZldRNVF4MlpVUDhNbzhoWjVFOS81VzUK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "title": "Veterinary Clinic Manager",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": false
      }
    ]
  }
}
