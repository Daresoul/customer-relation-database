<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beatrix.lab.controllers.NewReportController"
            stylesheets="@../assets/main.css">
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge">
            <content>
                <VBox spacing="40" styleClass="content">
                    <children>

<!--                       !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! LAB RESULTS !!!!!!!!!!!!!!!!!!!!!!!!!!!!!                 -->

                        <Label maxWidth="1.7976931348623157E308" text="ПОДАТОЦИ ЗА ЛАБОРАТОРИСКИ АПАРАТИ" styleClass="header-label" alignment="CENTER"/>
                        <Separator/>
                        <!-- EXIGO SECTION -->

                                        <HBox spacing="20">
                                            <children>
                                                <Pane fx:id="exigoToggleOverlay">
                                                    <children>
                                                        <JFXToggleNode fx:id="exigoToggle">
                                                            <Label text="ХЕМАТОЛОГИЈА - EXIGO" styleClass="header"/>
                                                        </JFXToggleNode>
                                                    </children>
                                                </Pane>

                                                <Button fx:id="btnRefetchExigoData" styleClass="button-transparent"
                                                        onAction="#onExigoDataRefresh">
                                                    <graphic>
                                                        <MaterialIconView styleClass="reload-icon"/>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>

                                        <VBox fx:id="exigoSection" spacing="40">
                                            <children>
                                                <VBox spacing="5">
                                                    <children>
                                                        <HBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" spacing="10">
                                                            <children>
                                                                <Label disable="true" text="Тип на анализа:"
                                                                       styleClass="bold"/>
                                                                <Label fx:id="exigoAnalysisTypeValue" disable="true"/>
                                                            </children>
                                                        </HBox>
                                                        <HBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" spacing="10">
                                                            <children>
                                                                <Label disable="true"
                                                                       text="Идентификациски број на пациент (ID):"
                                                                       styleClass="bold"/>
                                                                <Label fx:id="exigoPatientCodeValue" disable="true"/>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                                <JFXDatePicker fx:id="datePickerExigoDateOfIssue" maxHeight="1.7976931348623157E308"
                                                               maxWidth="450" promptText="Датум на прием">
                                                </JFXDatePicker>
                                                <HBox>
                                                    <children>
                                                        <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                                                        <JFXButton fx:id="btnBrowseExigoSamples" onAction="#onBrowseExigoSamples"
                                                                   styleClass="primary-button" text="Прегледај примероци"/>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>


                                        <Separator/>
                        <!-- POINTCARE SECTION -->
                                        <Pane fx:id="pointcareToggleOverlay">
                                            <children>
                                                <JFXToggleNode fx:id="pointcareToggle">
                                                    <Label text="БИОХЕМИЈА - POINTCARE" styleClass="header"/>
                                                </JFXToggleNode>
                                            </children>
                                        </Pane>
                                        <VBox fx:id="pointcareSection" spacing="40">
                                            <children>
                                                <VBox spacing="5">
                                                    <children>
                                                        <HBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" spacing="10">
                                                            <children>
                                                                <Label disable="true" text="Тип на анализа:"
                                                                       styleClass="bold"/>
                                                                <Label fx:id="pointcareDateAndTimeValue" disable="true"/>
                                                            </children>
                                                        </HBox>
                                                        <HBox maxHeight="1.7976931348623157E308"
                                                              maxWidth="1.7976931348623157E308" spacing="10">
                                                            <children>
                                                                <Label disable="true"
                                                                       text="Идентификациски број на пациент (ID):"
                                                                       styleClass="bold"/>
                                                                <Label fx:id="pointcarePatientCodeValue" disable="true"/>
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </VBox>

                                        <Separator/>
                        <!-- HEALVET SECTION -->

                                        <Pane fx:id="healvetToggleOverlay">
                                            <children>
                                                <JFXToggleNode fx:id="healvetToggle">
                                                    <Label text="ХОРМОНИ - HEALVET" styleClass="header"/>
                                                </JFXToggleNode>
                                            </children>
                                        </Pane>
                                        <VBox fx:id="healvetSection">
                                            <children>
                                                <HBox alignment="CENTER" spacing="10">
                                                    <children>

                                                        <JFXToggleButton fx:id="toggleIsBeforeACTHTest" text="Пред ACTH тест" visible="false"/>
                                                        <Region HBox.hgrow="ALWAYS"/>
                                                        <Label styleClass="italic" text="Избриши ги сите вчитани Healvet примероци"/>
                                                        <Button styleClass="button-transparent" prefWidth="40"
                                                                onAction="#onRemoveAllHealvetSamples">
                                                            <graphic>
                                                                <MaterialIconView styleClass="clear-all-icon"/>
                                                            </graphic>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                                <JFXListView fx:id="listHealvetSamples" maxHeight="300" minHeight="300"
                                                             maxWidth="1.7976931348623157E308" >
                                                </JFXListView>
                                                <Label maxWidth="Infinity" styleClass="italic" text="Селектирај ги релевантните Healvet примероци за нивно вчитување во извештајот"/>
                                            </children>
                                        </VBox>

<!--         !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! PATIENTS RESULTS !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
                        <Label maxWidth="1.7976931348623157E308" text="ПОДАТОЦИ ЗА ПАЦИЕНТ" styleClass="header-label" alignment="CENTER"/>
                        <Separator/>
                        <VBox fx:id="patientDataPane" spacing="40">
                            <padding>
                                <Insets right="150" left="150" top="20"/>
                            </padding>
                            <children>
                                <JFXTextField fx:id="txtOwner" maxHeight="1.7976931348623157E308" labelFloat="false"
                                              maxWidth="1.7976931348623157E308" promptText="Име и презиме на сопственик">
                                </JFXTextField>
                                <JFXTextField fx:id="txtPatientName" maxHeight="1.7976931348623157E308" labelFloat="false"
                                              maxWidth="1.7976931348623157E308" promptText="Име на пациент">
                                </JFXTextField>
                                <JFXTextField fx:id="txtMicrochip" maxHeight="1.7976931348623157E308" labelFloat="false"
                                              maxWidth="1.7976931348623157E308" promptText="Микрочип">
                                </JFXTextField>
                                <JFXComboBox fx:id="cbPatientType" maxHeight="1.7976931348623157E308" labelFloat="false"
                                             maxWidth="1.7976931348623157E308" promptText="Вид на пациент">
                                </JFXComboBox>
                                <JFXComboBox fx:id="cbGender" maxHeight="1.7976931348623157E308" labelFloat="false"
                                             maxWidth="1.7976931348623157E308" promptText="Пол">
                                </JFXComboBox>
                                <JFXDatePicker fx:id="dpDateOfBirth" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" promptText="Датум на раѓање">
                                </JFXDatePicker>
                            </children>
                        </VBox>
                        <HBox>
                            <padding>
                                <Insets right="150" left="150"/>
                            </padding>
                            <children>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button styleClass="button-transparent"
                                        onAction="#onEditPatientData">
                                    <padding>
                                        <Insets right="20"/>
                                    </padding>
                                    <graphic>
                                        <MaterialIconView styleClass="edit-icon"/>
                                    </graphic>
                                </Button>
                                <Button styleClass="button-transparent"
                                        onAction="#onClearPatientData">
                                    <padding>
                                        <Insets right="20"/>
                                    </padding>
                                    <graphic>
                                        <MaterialIconView styleClass="clear-all-icon"/>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>


                        <TitledPane fx:id="titledPaneOfPatientsList" text="ЛИСТА ПОСТОЕЧКИ ПАЦИЕНТИ ОД СЕЛЕКТИРАНИТЕ УРЕДИ">
                            <padding>
                                <Insets top="20"/>
                            </padding>
                            <content>
                                <JFXListView fx:id="listPatients" maxHeight="150" minHeight="150"
                                             maxWidth="1.7976931348623157E308">
                                </JFXListView>
                            </content>
                        </TitledPane>

<!--                        END OF SECTIONS-->

                                        <HBox>
                                            <children>
                                                <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"/>
                                                <JFXButton fx:id="btnPrint" onAction="#preparePDFDocumentForPrinting"
                                                           styleClass="primary-button" text="Прегледај PDF Извештај"/>
                                            </children>
                                        </HBox>
                                        <HBox>
                                            <children>
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Label styleClass="italic" text="При преглед на PDF извештај автоматски се запаметуваат новите пациенти"/>
                                            </children>
                                        </HBox>
                                        <Region prefWidth="30"/>

                                    </children>
                </VBox>

            </content>
        </ScrollPane>

    </center>
</BorderPane>
